{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Run Summary Schema",
  "type": "object",
  "required": ["total_sprints_planned", "completed_sprints", "sprint_results"],
  "properties": {
    "total_sprints_planned": {
      "type": "integer",
      "minimum": 1
    },
    "completed_sprints": {
      "type": "integer",
      "minimum": 0
    },
    "failed_sprint": {
      "type": "integer",
      "minimum": 1
    },
    "sprint_results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sprint_number": {"type": "integer"},
          "status": {"type": "string", "enum": ["success", "failed", "timeout"]},
          "tokens_total": {"type": "integer"}
        }
      }
    }
  }
}
