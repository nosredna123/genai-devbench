{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint Validation Schema",
  "type": "object",
  "required": ["sprint_number", "validated_at", "overall_status", "checks"],
  "properties": {
    "sprint_number": {
      "type": "integer",
      "minimum": 1
    },
    "validated_at": {
      "type": "string",
      "format": "date-time"
    },
    "overall_status": {
      "type": "string",
      "enum": ["passed", "failed"]
    },
    "checks": {
      "type": "object",
      "properties": {
        "python_files_exist": {"type": "boolean"},
        "imports_valid": {"type": "boolean"},
        "syntax_valid": {"type": "boolean"},
        "requirements_exist": {"type": "boolean"}
      }
    },
    "issues": {
      "type": "array",
      "items": {"type": "string"}
    },
    "completeness": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    }
  }
}
